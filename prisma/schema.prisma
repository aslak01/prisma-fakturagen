generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Todo {
  uid        String     @id @default(cuid())
  created_at DateTime   @default(now())
  text       String
  done       Boolean
}

model Kunde {
  uid         String    @id @default(cuid())
  created_at  DateTime  @default(now())
  name        String    @unique
  orgnr       String    @unique
  address     String
  fakturaer   Faktura[] @relation(references: [uid])
  fakturalinjer FakturaL[]
}

model Faktura {
  uid         String      @id @default(cuid())
  fakturanr   Int         @unique
  created_at  DateTime    @default(now())
  lines       FakturaL[]  @relation(fields: [linjeId], references: [uid])
  linjeId     String
  kunde       Kunde[]     @relation(fields: [kundeId], references: [uid])
  kundeId     String
  forfall     DateTime
}

model FakturaL {
  uid         String      @id @default(cuid())
  beskrivelse String
  netto       Int
  mva         Int
  dato        DateTime
  id          Int         @unique
  faktura     Faktura[]   @relation(fields: [fakturaId], references: [uid])
  fakturaId   String
  kunde       Kunde[]     @relation(fields: [kundeId], references: [uid])
  kundeId     String

}